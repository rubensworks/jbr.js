{
  "name": "@jbr-hook/docker",
  "version": "5.4.0",
  "description": "Docker-based hook handler for JBR",
  "main": "index.js",
  "typings": "index",
  "lsd:module": true,
  "author": "Ruben Taelman <rubensworks@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/rubensworks/jbr.js.git",
    "directory": "packages/hook-docker"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/rubensworks/jbr.js/issues"
  },
  "homepage": "https://github.com/rubensworks/jbr.js#readme",
  "license": "MIT",
  "keywords": [
    "hook",
    "CLI",
    "jbr",
    "benchmarking"
  ],
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "lib/templates",
    "index.d.ts",
    "index.ts",
    "components"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "../../tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true
  },
  "scripts": {
    "test": "node \"../../node_modules/jest/bin/jest.js\" ${1}",
    "test-watch": "node \"../../node_modules/jest/bin/jest.js\" ${1} --watch",
    "build": "node \"../../node_modules/typescript/bin/tsc\"",
    "validate": "npm ls"
  },
  "devDependencies": {
    "jbr": "^5.4.0"
  },
  "peerDependencies": {
    "jbr": ">=2.0.0"
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.11",
    "fs-extra": "^10.0.0"
  }
}
